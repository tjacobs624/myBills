@page "{id:int}"
@model BillManager.Pages.Bills.DeleteModel

<div class="container mt-4">
    <h2 class="text-danger mb-4">Delete Bill</h2>

    <div class="alert alert-warning">
        <h5>Are you sure you want to delete this bill?</h5>
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Bill.Name</dd>

            <dt class="col-sm-3">Amount:</dt>
            <dd class="col-sm-9">@Model.Bill.Amount.ToString("C")</dd>

            <dt class="col-sm-3">Due Date:</dt>
            <dd class="col-sm-9">@Model.Bill.DueDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Category:</dt>
            <dd class="col-sm-9">@Model.Bill.Category</dd>
        </dl>

        <form method="post" class="mt-3">
            <input type="hidden" asp-for="Bill.Id" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
